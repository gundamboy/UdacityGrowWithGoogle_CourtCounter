<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#008697</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@android:color/background_dark</item>

        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#008697</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
    </style>
</resources>